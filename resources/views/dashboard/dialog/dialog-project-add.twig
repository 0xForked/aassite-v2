<!-- Modal -->
<div class="modal fade" id="projectAddDialog" tabindex="-1" role="dialog" aria-labelledby="projectAddDialogLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <form method="POST" action="{{ path_for('dashboard.project.create') }}" enctype="multipart/form-data">
            <div class="modal-header" >
                <h5 class="modal-title" id="projectAddDialogLabel">Add new Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="titleProject"><b>Title</b></label>
                    <p for="titleProject">Berikan judul yang mengambarkan project ini! <i class="fa fa-info-circle" style="color:firebrick" data-toggle="tooltip" data-placement="top" title="Beri judul"></i></p>
                    <input type="text" class="form-control" name="titleProject" id="titleProject" placeholder="Title" required autofocus>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="categoryProject"><b>Category</b></label>
                            <p for="categoryProject">Pilih kategori yang tepat, untuk mempermudah penyorotan! <i class="fa fa-info-circle" style="color:firebrick" data-toggle="tooltip" data-placement="top" title="pilih category"></i></p>
                            <select name="categoryProject[]" class="selectpicker" multiple data-live-search="true"  data-width="100%">
                                {% for category in category_list %}
                                    <option value="{{ category.id }}" {{ category.id == 1 ? 'selected' : '' }} >{{ category.title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="tagProject"><b>Tag</b></label>
                            <p for="tagProject">Masukkan beberapa kata kunci, untuk mempermudah penyorotan! <i class="fa fa-info-circle" style="color:firebrick" data-toggle="tooltip" data-placement="top" title="pilih tag"></i></p>
                            {# <input id="tagData" style="width:350px;" type="text" name="tagProject" placeholder="Tag" required/>
                            <div style="clear:both;"></div> #}

                             <select name="tagProject[]" class="selectpicker" multiple data-selected-text-format="count > 3" data-live-search="true"  data-width="100%" data-actions-box="true">
                                {% for tag in tag_list %}
                                    <option value="{{ tag.id }}" {{ tag.id == 1 ? 'selected' : '' }}  data-content="<span class='badge badge-secondary'>{{ tag.title }}</span>">{{ tag.title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="descriptionProject"><b>Description</b></label>
                    <p for="descriptionProject">Deskripsikan project secara garis besar (singkat, padat, jelas)! <i class="fa fa-info-circle" style="color:firebrick" data-toggle="tooltip" data-placement="top" title="Beri deskripsi"></i></p>
                    <label for="descriptionProject"></label>
                    <input type="text" class="form-control" id="descriptionProject" name="descriptionProject" placeholder="Description" required>
                </div>
                <div class="form-group">
                    <label for="githubLinkProject"><b>Github</b></label>
                    <p for="githubLinkProject">Masukkan link external <i>*jika ada</i> </p>
                    <input type="text" class="form-control" id="githubLinkProject" name="githubLinkProject" placeholder="External link " >
                </div>
                <div class="form-group">
                    <label for="webLinkProject"><b>Web Link</b></label>
                    <p for="webLinkProject">Masukkan link external <i>*jika ada</i> </p>
                    <input type="text" class="form-control" id="webLinkProject" name="webLinkProject" placeholder="External link " >
                </div>
                <div class="form-group">
                    <label for="playStoreLinkProject"><b>Play Store</b></label>
                    <p for="playStoreLinkProject">Masukkan link external <i>*jika ada</i> </p>
                    <input type="text" class="form-control" id="playStoreLinkProject" name="playStoreLinkProject" placeholder="External link " >
                </div>
                <div class="form-group">
                    <label for="appStoreLinkProject"><b>App Store</b></label>
                    <p for="appStoreLinkProject">Masukkan link external <i>*jika ada</i> </p>
                    <input type="text" class="form-control" id="appStoreLinkProject" name="appStoreLinkProject" placeholder="External link " >
                </div>
                <div class="form-group">
                    <label for="userGuideLinkProject"><b>User Guide</b></label>
                    <p for="userGuideLinkProject">Masukkan link external <i>*jika ada</i> </p>
                    <input type="text" class="form-control" id="userGuideLinkProject" name="userGuideLinkProject" placeholder="External link " >
                </div>
                <div class="row">
                    <div class="col-6">
                        <label for="projectLogo"><b>Logo</b></label>
                        <p for="projectLogo">Tambahkan logo project <i>*jika ada</i></p>
                        <label for="projectLogo" class="text-center">
                            <input type="file" name="projectLogo" id="projectLogo" style="display:none;" onchange="readIMG01(this);"/>
                            <img id="img01" name="img01" src="{{ base_url() }}/assets/img/add-img.svg"  class="img-thumbnail rounded" width="270px" height="270px"/>
                        </label>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="statusProject"><b>Status</b></label>
                            <p for="statusProject">Pilih status kontent baru ini! <i class="fa fa-info-circle" style="color:firebrick" data-toggle="tooltip" data-placement="top" title="Draft, Publish, Featured"></i></p>
                            <select class="form-control" id="statusProject" name="statusProject">
                                <option value="0">Draft</option>
                                <option value="1">Publish</option>
                                <option value="2">Featured</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Create</button>
                <input type="hidden" name="author" id="author" value="{{ auth.user.id }}" />
                {{ csrf.field | raw }}
            </div>
        </form>
    </div>
  </div>
</div>